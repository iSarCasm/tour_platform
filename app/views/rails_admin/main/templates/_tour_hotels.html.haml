-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :hotel_id
  .col-md-4
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :active_tour_id

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :start_date
  .col-md-4
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :end_date

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :board_basis_id
  .col-md-4
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :payment_type_id

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :finalisation_date
  .col-md-4
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :hotel_theme

.row
  .col-md-12
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :hotel_rooms_attributes

.clearfix
  = render 'rails_admin/main/templates/shared/compact_field',
    field: :notes

.clearfix
  - if @object.persisted?
    = link_to get_report_path(:tour_hotel, @object), class: 'btn btn-info', target: 'blank'do
      Show Interim Report
      %i.icon-print
