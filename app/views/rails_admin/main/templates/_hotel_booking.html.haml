-# DO NOT REMOVE THAT LINE
- config_template(fields, options)

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Main
      .panel-body
        .row
          - if @object.persisted?
            .col-md-5.col-md-offset-1
              = render 'rails_admin/main/templates/shared/read_only_field',
                field: :hotel_room_title
            .col-md-5
              = render 'rails_admin/main/templates/shared/read_only_field',
                field: :tour_booking_title
          - else
            .col-md-5.col-md-offset-1
              = render 'rails_admin/main/templates/shared/compact_field',
                field: :hotel_room_id
            .col-md-5
              = render 'rails_admin/main/templates/shared/compact_field',
                field: :tour_booking_id

.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Order details
      .panel-body
        .row
          .col-md-5.col-md-offset-1
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :dining_option_ids, css: 'compact-2x'
          .col-md-5
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :hotel_option_ids, css: 'compact-2x'
