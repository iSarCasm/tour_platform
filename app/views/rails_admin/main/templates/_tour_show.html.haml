- config_show_template fields

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/field_show',
      field: :title, css: ''
    = render 'rails_admin/main/templates/shared/field_show',
      field: :description, css: ''
  .col-md-4
    = render 'rails_admin/main/templates/shared/field_show',
  field: :tour_type_id
    = render 'rails_admin/main/templates/shared/field_show',
    field: :country_id

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/field_show',
    field: :category_ids

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/field_show',
    field: :allow_external_agents
    = render 'rails_admin/main/templates/shared/field_show',
    field: :insurance_allowed
  .col-md-4
    = render 'rails_admin/main/templates/shared/field_show',
    field: :allow_deposits
    = render 'rails_admin/main/templates/shared/field_show',
    field: :self_drive
    - for_field :other_costs do |field, css, id, label, value|
      %div{class: "#{css}", id: id}
        %p
          %strong= label
          %br
          = value


.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/field_show',
    field: :excursions
  .col-md-4
    = render 'rails_admin/main/templates/shared/field_show',
    field: :itinerary

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/field_show',
    field: :important_notes
  .col-md-4
    = render 'rails_admin/main/templates/shared/field_show',
    field: :tour_memo

.row
  .col-md-11.col-md-offset-1
    = render 'rails_admin/main/templates/shared/field_show',
    field: :active_tours_attributes, id_prefix: 'tour_'
