- config_show_template fields

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/field_show',
      field: :title
    = render 'rails_admin/main/templates/shared/field_show',
      field: :description
  .col-md-4
    = render 'rails_admin/main/templates/shared/field_show',
      field: :address

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/field_show',
      field: :rating
    = render 'rails_admin/main/templates/shared/field_show',
      field: :photos_attributes
  .col-md-5
    .row
      .col-md-6
        = render 'rails_admin/main/templates/shared/field_show',
          field: :website
      .col-md-6
        = render 'rails_admin/main/templates/shared/field_show',
          field: :phone_number

    .row
      .col-md-6
        = render 'rails_admin/main/templates/shared/field_show',
          field: :buyer_name
      .col-md-6
        = render 'rails_admin/main/templates/shared/field_show',
          field: :fax_number

    .row
      .col-md-6
        = render 'rails_admin/main/templates/shared/field_show',
          field: :buyer_number
      .col-md-6
        = render 'rails_admin/main/templates/shared/field_show',
          field: :email

.row
  .col-md-10.col-md-offset-1
    %table.table.table-bordered.table-hover.table-small-text
      %thead
        %th Stock
        %th Adult Buy
        %th Adult Sell
        %th Senior Buy
        %th Senior Sell
        %th Infant Buy
        %th Infant Sell
        %th Child Buy
        %th Child Sell
      %tbody
        %tr
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :stock
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :adult_buy
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :adult_sell
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :senior_buy
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :senior_sell
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :infant_buy
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :infant_sell
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :child_buy
          %td= render 'rails_admin/main/templates/shared/field_show_no_label', field: :child_sell
