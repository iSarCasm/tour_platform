-# DO NOT REMOVE THAT LINE
- config_template(fields, options)

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :title
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :description
  .col-md-4
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :address

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :rating, css: 'compact-2x'
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :photos_attributes, id_prefix: 'active_tour_'
  .col-md-5
    .row
      .col-md-6
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :website, css: 'compact-2x'
      .col-md-6
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :phone_number, css: 'compact-2x'

    .row
      .col-md-6
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :buyer_name, css: 'compact-2x'
      .col-md-6
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :fax_number, css: 'compact-2x'

    .row
      .col-md-6
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :buyer_number, css: 'compact-2x'
      .col-md-6
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :email, css: 'compact-2x'

.row
  .col-md-10.col-md-offset-1
    %table.table.table-bordered.table-hover.table-small-text
      %thead
        %th Stock
        %th Adult Buy
        %th Adult Sell
        %th Senior Buy
        %th Senior Sell
        %th Infant Buy
        %th Infant Sell
        %th Child Buy
        %th Child Sell
      %tbody
        %tr
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :stock
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :adult_buy
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :adult_sell
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :senior_buy
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :senior_sell
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :infant_buy
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :infant_sell
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :child_buy
          %td= render 'rails_admin/main/templates/shared/number_field_in_table', field: :child_sell
