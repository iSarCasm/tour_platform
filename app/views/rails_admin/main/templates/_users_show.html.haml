-# DO NOT REMOVE THAT LINE
- config_show_template fields

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Main
      .panel-body
        .row
          .col-md-3
            = render 'rails_admin/main/templates/shared/field_show',
              field: :title
            = render 'rails_admin/main/templates/shared/field_show',
              field: :date_of_birth
          .col-md-3
            = render 'rails_admin/main/templates/shared/field_show',
              field: :first_name
            = render 'rails_admin/main/templates/shared/field_show',
              field: :address
          .col-md-3
            = render 'rails_admin/main/templates/shared/field_show',
              field: :last_name
            = render 'rails_admin/main/templates/shared/field_show',
              field: :postcode
          .col-md-3
            = render 'rails_admin/main/templates/shared/field_show',
              field: :gender_id
            = render 'rails_admin/main/templates/shared/field_show',
              field: :email

.row
  .col-md-10.col-md-offset-1
    .row
      .col-md-3.panel-padding
        .panel.panel-default
          .panel-heading
            %h3.panel-title Phones
          .panel-body
            = render 'rails_admin/main/templates/shared/field_show',
              field: :phone_mobile
            = render 'rails_admin/main/templates/shared/field_show',
              field: :phone_landline
            = render 'rails_admin/main/templates/shared/field_show',
              field: :phone_evening

        .panel.panel-default
          .panel-heading
            %h3.panel-title Travel club
          .panel-body
            = render 'rails_admin/main/templates/shared/field_show',
              field: :travel_club
            = render 'rails_admin/main/templates/shared/field_show',
              field: :member_no
      .col-md-3.panel-padding
        .panel.panel-default
          .panel-heading
            %h3.panel-title Marketing
          .panel-body
            = render 'rails_admin/main/templates/shared/field_show',
              field: :marketing_email
            = render 'rails_admin/main/templates/shared/field_show',
              field: :marketing_sms
            = render 'rails_admin/main/templates/shared/field_show',
              field: :marketing_phone
            = render 'rails_admin/main/templates/shared/field_show',
              field: :marketing_postal
      .col-md-3.panel-padding
        .panel.panel-default
          .panel-heading
            %h3.panel-title Passport
          .panel-body
            = render 'rails_admin/main/templates/shared/field_show',
              field: :passport_name
            = render 'rails_admin/main/templates/shared/field_show',
              field: :passport_no
            = render 'rails_admin/main/templates/shared/field_show',
              field: :passport_expiry

        .panel.panel-default
          .panel-heading
            %h3.panel-title Admin information
          .panel-body
            = render 'rails_admin/main/templates/shared/field_show',
              field: :base_role
            = render 'rails_admin/main/templates/shared/field_show',
              field: :role_id
      .col-md-3.panel-padding
        .panel.panel-default
          .panel-heading
            %h3.panel-title Next of kin
          .panel-body
            = render 'rails_admin/main/templates/shared/field_show',
              field: :kin_name
            = render 'rails_admin/main/templates/shared/field_show',
              field: :kin_phone

        .panel.panel-default
          .panel-heading
            %h3.panel-title Other
          .panel-body
            = render 'rails_admin/main/templates/shared/field_show',
              field: :may_expand_more_with_full_contact
            = render 'rails_admin/main/templates/shared/field_show',
              field: :client_unsuitable_for_travel

.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Customer activity
      .panel-body
        .row
          .col-md-4
            = render 'rails_admin/main/templates/shared/field_show',
              field: :total_spent
          .col-md-4
            = render 'rails_admin/main/templates/shared/field_show',
              field: :last_travelled
          .col-md-4
            = render 'rails_admin/main/templates/shared/field_show',
              field: :created_at
        .row
          .col-md-12
            = render 'rails_admin/main/templates/shared/field_show',
              field: :tour_booking_ids, css: 'no-margin-top'


.row
  .col-md-5.col-md-offset-1
    = render 'rails_admin/notes', type: @object.class.to_s, id: @object.id
