-# DO NOT REMOVE THAT LINE
- config_template(fields, options)

- if @object.persisted?
  .row
    .col-md-10.col-md-offset-1.no-padding
      = link_to get_report_path(:tour_coach, @object, report: PickupReport[:pdf]), class: 'btn btn-info', target: 'blank' do
        Pickup Report
        %i.icon-print
      %span{style: 'width: 20px;'}
      = link_to get_report_path(:tour_coach, @object, report: PickupReport[:xls]), class: 'btn btn-info', target: 'blank' do
        Pickup Report (.xls)
        %i.icon-print
      %span{style: 'width: 20px;'}
      = link_to get_report_path(:tour_coach, @object, report: SeatplanReport[:pdf]), class: 'btn btn-info', target: 'blank' do
        Seating Plan Report
        %i.icon-print
  %br

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Main
      .panel-body
        .col-md-3
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :coach_id
        .col-md-3
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :active_tour_id
        .col-md-3
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :departure_date
        .col-md-3
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :arrival_date

.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Details
      .panel-body
        .col-md-3
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :driver_name, css: 'compact-2x'
        .col-md-3
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :vehicle_reg, css: 'compact-2x'
        .col-md-3
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :driver_number, css: 'compact-2x'
        .col-md-3
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :rate, css: 'compact-2x'
        .col-md-4
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :seatplan_id
        .col-md-8
          = render 'rails_admin/main/templates/shared/std_field',
            field: :pickup_list_id, id_prefix: 'tour_coach_'
        .col-md-4
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :seat_prices_attributes
        .col-md-8
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :amenity_ids

- if @object.persisted?
  .row
    .col-md-5.col-md-offset-1
      = render 'rails_admin/notes', type: @object.class.to_s, id: @object.id
