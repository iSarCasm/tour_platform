-# DO NOT REMOVE THAT LINE
- config_template(fields, options)

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Main
      .panel-body
        .row
          .col-md-3
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :title, css: 'compact-2x'
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :date_of_birth
          .col-md-3
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :first_name, css: 'compact-2x'
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :address, css: 'compact-2x'
          .col-md-3
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :last_name, css: 'compact-2x'
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :postcode, css: 'compact-2x'
          .col-md-3
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :gender_id
            = render 'rails_admin/main/templates/shared/compact_field',
              field: :email, css: 'compact-2x'

.row
  .col-md-10.col-md-offset-1
