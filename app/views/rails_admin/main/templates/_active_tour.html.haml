-# DO NOT REMOVE THAT LINE
- config_template(fields, options)

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Main
      .panel-body
        .col-md-4
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :tour_id
        .col-md-4
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :start_date
        .col-md-4
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :end_date

.row
  .col-md-10.col-md-offset-1.panel-padding
    .panel.panel-default
      .panel-heading
        %h3.panel-title Details
      .panel-body
        .col-md-4
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :allow_external_agents
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :allow_deposits
        .col-md-4
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :insurance_allowed
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :self_drive
        .col-md-4
          = render 'rails_admin/main/templates/shared/compact_field',
            field: :other_costs

.row
  .col-md-11.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :tour_hotels_attributes, id_prefix: 'active_tour_'

.row
  .col-md-11.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :tour_coaches_attributes, id_prefix: 'active_tour_'

.row
  .col-md-11.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :ferry_dates_attributes, id_prefix: 'active_tour_'

.row
  .col-md-11.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :tour_excursions_attributes, id_prefix: 'active_tour_'
