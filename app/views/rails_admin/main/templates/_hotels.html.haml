- config_template(fields, options)

-# For field render you can use compact_render_field(field) or field.render
.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
        field: :title
    = render 'rails_admin/main/templates/shared/compact_field',
        field: :description
  .col-md-4
    = render 'rails_admin/main/templates/shared/compact_field',
        field: :address

.row
  .col-md-10.col-md-offset-1
    .row
      .col-md-3
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :website, css: 'compact-2x'
      .col-md-3
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :phone_number, css: 'compact-2x'
      .col-md-3
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :contact_name, css: 'compact-2x'
      .col-md-3
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :fax_number, css: 'compact-2x'

.row
  .col-md-10.col-md-offset-1
    .row
      .col-md-3
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :emergency_number, css: 'compact-2x'
      .col-md-3
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :email, css: 'compact-2x'
      .col-md-3
        = render 'rails_admin/main/templates/shared/compact_field',
          field: :rating


.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :photos_attributes
  .col-md-4
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :facility_ids

.row
  .col-md-4.col-md-offset-1
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :board_basis_id
  .col-md-4
    = render 'rails_admin/main/templates/shared/compact_field',
      field: :payment_type_id

.clearfix
  - for_field :hotel_rooms_attributes do |field, css, id, label|
    %p= label
    = compact_render_field field

